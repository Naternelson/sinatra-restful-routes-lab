<div class="row">
    <form class="col s12" method="POST" action="/recipes">
        <div class="row">
            <div class="col s12 input-field">
                <input type="text" name="name" id="rec_name">
                <label for="rec_name">Recipe Name</label>
            </div>
            <div class="col s12 input-field">
                <input type="text" name="ingredients" id="rec_ingredients">
                <label for="rec_ingredients">ingredients</label>
            </div>
            <div class="col s12 input-field">
                <input type="text" name="cook_time" id="rec_time">
                <label for="rec_time">Cook Time</label>
            </div>
        </div>
        <div class="row">
            <button class="waves-effect waves-light btn" type="submit">add recipe</button>
        </div>
    </form>
</div>